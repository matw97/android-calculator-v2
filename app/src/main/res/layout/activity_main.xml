<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="322dp"
            android:layout_height="37dp"
            android:id="@+id/result" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="128dp"
            android:layout_marginRight="128dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="1"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button1" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/result"/>
    <Button
            android:text="2"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2" app:layout_constraintStart_toEndOf="@+id/button1" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/result"/>
    <Button
            android:text="3"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button3" app:layout_constraintStart_toEndOf="@+id/button2" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/result"/>
    <Button
            android:text="+"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonAdd" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/result" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/button3" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="4"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <Button
            android:text="5"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button2" app:layout_constraintStart_toEndOf="@+id/button4"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <Button
            android:text="6"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button6" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button3" app:layout_constraintStart_toEndOf="@+id/button5"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <Button
            android:text="-"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSub" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonAdd" app:layout_constraintStart_toEndOf="@+id/button6"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <Button
            android:text="7"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            app:layout_constraintTop_toBottomOf="@+id/button4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <Button
            android:text="8"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            app:layout_constraintTop_toBottomOf="@+id/button5" app:layout_constraintStart_toEndOf="@+id/button7"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <Button
            android:text="9"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            app:layout_constraintTop_toBottomOf="@+id/button6" app:layout_constraintStart_toEndOf="@+id/button8"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
    />
    <Button
            android:text="*"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMul"
            app:layout_constraintTop_toBottomOf="@+id/buttonSub" app:layout_constraintStart_toEndOf="@+id/button9"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="."
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDot" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button7" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <Button
            android:text="0"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/button0" app:layout_constraintStart_toEndOf="@+id/buttonDot"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button8"/>
    <Button
            android:text="C"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonC"
            app:layout_constraintEnd_toStartOf="@+id/buttonDiv"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/button0" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button9" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="/"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDiv" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonMul"
            android:layout_marginEnd="72dp" android:layout_marginRight="72dp" android:layout_marginTop="8dp"/>
    <Button
            android:text="="
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEval" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/buttonDiv"
            app:layout_constraintHorizontal_bias="0.783"/>
    <Button
            android:text="History"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonHistory" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>
    <Button
            android:text="Clear History"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonClearHistory" app:layout_constraintEnd_toStartOf="@+id/buttonHistory"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
</android.support.constraint.ConstraintLayout>